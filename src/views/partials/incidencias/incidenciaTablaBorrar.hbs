<body id="bodyIncidentes">

<ul id="ulIncidentes">
    {{#each incidentes}}
    <li id="liIncidentes">
        <ul><p>Tipo de incidente: </p>{{tipo}}</ul>
        <p>Descripcion: </p><p>{{descripcion}}</p>
        <p>Direcion: </p><p>{{direccion}}</p>
        <hr>
        {{#each comentario}}
       
        <p> {{this}}  </p>
       
         {{/each }}
        <form class="coment" action="/borrar/{{_id}}" method="post">
       
        <button class=" btnfiltrado">Eliminar</button>
        </form>
    </li> 
    <br>  
    {{/each}}
</ul>
</body>